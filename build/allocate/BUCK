  name = 'test',
  headers = subdir_glob([
    ('include', '**/*.hpp'),
  ]),
  srcs = glob([
    'test/*.cpp',
  ]),
  deps = [
    ':allocate',
    '//build/Catch2:Catch2'
  ],
)
